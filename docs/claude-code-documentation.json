          "location": "OS-specific system directories",
          "scope": "Organization-wide",
          "purpose": "Company standards and policies"
        },
        "project_memory": {
          "level": 2, 
          "location": "./CLAUDE.md",
          "scope": "Team-shared",
          "purpose": "Project instructions and workflows"
        },
        "user_memory": {
          "level": 3,
          "location": "~/.claude/CLAUDE.md", 
          "scope": "Personal across projects",
          "purpose": "Personal preferences and shortcuts"
        },
        "project_local_memory": {
          "level": 4,
          "location": "deprecated",
          "scope": "Project-specific personal",
          "status": "deprecated"
        }
      },
