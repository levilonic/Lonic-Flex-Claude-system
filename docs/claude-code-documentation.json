{
  "claude_code": {
    "overview": {
      "description": "Terminal-based AI coding assistant developed by Anthropic",
      "purpose": "Helps developers turn ideas into code faster",
      "installation": "npm install -g @anthropic-ai/claude-code",
      "requirements": ["Node.js 18+", "Claude.ai or Anthropic Console account"],
      "start_command": "claude"
    },
    "capabilities": {
      "feature_development": {
        "description": "Tell Claude what you want to build in plain English. It will make a plan, write the code, and ensure it works.",
        "use_cases": ["Build features from descriptions", "Implement complex workflows", "Create new components"]
      },
      "debugging": {
        "description": "Describe a bug or paste an error message. Claude Code will analyze your codebase, identify the problem, and implement a fix.",
        "use_cases": ["Fix runtime errors", "Resolve logic issues", "Debug test failures"]
      },
      "codebase_navigation": {
        "description": "Can answer questions about project structure and find up-to-date information",
        "features": ["Project structure analysis", "External source integration via MCP", "Code understanding"]
      },
      "automation": {
        "description": "Automate tedious development tasks",
        "tasks": ["Fix lint issues", "Resolve merge conflicts", "Write release notes", "CI/CD workflows"]
      }
    },
    "memory_system": {
      "hierarchy": {
        "enterprise_policy": {
